---
import { steps } from "../data/Steps";
---

<section id="howitworks" class="full-width">
  <div class="howitworks-header">
    <h2>Женская алхимия:</h2>
    <h3>4 стихии для трансформации</h3>
  </div>

  <div class="timeline">
    {
      steps.map((step) => (
        <div class="step-wrapper">
          <div class="step" data-step={step.number} aria-hidden="true">
            <div class="points-wrapper">
              <div class="point-left" />
              <div class="point-right" />
            </div>
            <div class="text">
              <h4>
                {step.title}
                <br />
                {step.subtitle}
              </h4>
              <p>{step.description}</p>
            </div>
          </div>
        </div>
      ))
    }

    <svg class="arc-svg" preserveAspectRatio="none" aria-hidden="true">
      <path
        class="line-top"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"></path>
      <path
        class="line-bottom"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"></path>
      <path
        class="arc-path"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"></path>
    </svg>
  </div>
</section>

<style>
  #howitworks {
    --row-gap: 70px;
    --arc-offset: 10ch;
    --text-width: 45ch;
    --title-width: 26ch;
    --point-size: 28px;
    --color: var(--clr-pink-100);
    --border-color: #333;
    --border: 2px solid var(--border-color);
    --margin-inline: 0;
    --margin-block: 0;
    --padding-inline: 0;
    --padding-block: 0;

    background: var(--clr-pink-400);
    height: 100svh;
    padding-bottom: var(--space-xl);
  }

  .howitworks-header {
    padding: var(--space-2xl) 0 var(--space-l-xl) 0;
    position: relative;
    z-index: 0;

    &::after {
      content: "";
      position: absolute;
      top: 2rem;
      right: 0rem;
      width: 100px;
      height: 100px;
      background: var(--clr-snow);
      clip-path: path(
        "M49.2807 0L55.9016 42.6598L98.5614 49.2807L55.9016 55.9016L49.2807 98.5614L42.6598 55.9016L0 49.2807L42.6598 42.6598L49.2807 0Z"
      );
      z-index: 1;
      pointer-events: none;
    }
  }

  .howitworks-header h2 {
    font-size: var(--font-size-5);
    font-weight: 600;
    line-height: 100%;
    text-align: start;
    margin: 0;
  }

  .howitworks-header h3 {
    font-size: var(--font-size-5);
    font-weight: 600;
    line-height: 100%;
    text-align: end;
    margin: 0;
    text-transform: lowercase;
  }

  .timeline {
    position: relative;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    justify-items: center;
    row-gap: var(--row-gap);
    column-gap: var(--space-s);
  }

  .step-wrapper {
    display: flex;
    flex-direction: column;
  }

  .step {
    text-align: left;
    position: relative;
    flex-grow: 1;
    block-size: 100%;
  }

  .points-wrapper {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-block: var(--margin-block);
    margin-inline: var(--margin-inline);
    padding-block: var(--padding-block);
    padding-inline: var(--padding-inline);

    .point-right,
    .point-left {
      width: var(--point-size);
      height: var(--point-size);
      border-radius: 50%;
      background: var(--color);
      border: var(--border-color);
    }

    .point-right {
      --color: transparent;
      --border-color: transparent;
      margin-inline-end: var(--arc-offset);
    }
  }

  .text {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .text h4 {
    width: var(--title-width);
    text-wrap: balance;
    font-weight: 600;
    margin: 0 0 0.3rem;
  }

  .text p {
    max-width: 400px;
    width: var(--text-width);
    margin: 0;
  }

  .arc-svg {
    color: var(--clr-pink-100);
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }

  @media (max-width: 1024px) {
    #howitworks {
      --row-gap: 60px;
      padding-block: var(--space-xl);
      height: auto;
    }

    .timeline {
      grid-template-columns: 1fr;
      justify-items: center;
      align-items: center;
      row-gap: var(--space-xl);
    }

    .step {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: var(--space-2xs-xs);
    }

    .text {
      display: flex;
      flex-direction: column;
      align-items: center;
      max-width: 55ch;
      margin: 0 auto;
      gap: 0px;
    }

    .text h4 {
      font-size: var(--font-size-3);
      margin-bottom: 4px;
    }

    .text p {
      max-width: 40ch;
      line-height: 1.4;
    }

    .points-wrapper {
      justify-content: center;
    }

    .points-wrapper .point-left,
    .points-wrapper .point-right {
      margin: 0;
      width: 25px;
      height: 25px;
    }

    .point-right {
      display: none;
    }

    .arc-svg {
      display: none;
    }
    .text h4,
    .text p {
      overflow-wrap: break-word;
      word-break: keep-all;
      hyphens: manual;
    }
    .text h4,
    .text p {
      text-wrap: balance;
    }
  }

  @media (max-width: 768px) {
    #howitworks {
      padding-inline: var(--space-l);
      padding-block: var(--space-l-xl);
    }

    .timeline {
      row-gap: var(--space-l);
    }

    .text {
      max-width: var(--text-width);
    }

    .text h4 {
      font-size: var(--font-size-2);
    }

    .text p {
      font-size: var(--font-size-1);
      line-height: 1.5;
    }
  }

  @media (max-width: 700px) {
    .text h4,
    .text p {
      width: auto;
      max-width: 100%;
      overflow-wrap: break-word;
      word-break: break-word;
      hyphens: auto;
    }

    .text h4 {
      font-size: var(--font-size-1);
      margin-bottom: 4px;
    }
  }

  @media (max-width: 600px) {
    .howitworks-header {
      padding: var(--space-l) 0 var(--space-m);
      text-align: center;
    }

    .howitworks-header::after {
      top: auto;
      bottom: 4.2rem;
      left: 90%;
      transform: translateX(-50%) scale(0.8);
    }

    .howitworks-header h2,
    .howitworks-header h3 {
      font-size: clamp(1.5rem, 2.5vw + 1rem, 2.1rem);
      text-align: center;
    }

    #howitworks {
      padding-inline: var(--space-m);
      padding-bottom: var(--space-xl);
    }

    .timeline {
      row-gap: var(--space-m);
    }

    .points-wrapper .point-left,
    .points-wrapper .point-right {
      width: 18px;
      height: 18px;
      transform: translateX(-50%) scale(0.8);
    }

    .text p {
      font-size: var(--font-size-0);
      line-height: 1.4;
    }

    .text h4 {
      margin-bottom: var(--space-xs);
      margin-top: var(--space-s);
      font-size: var(--font-size-1);
      margin-bottom: 4px;
    }
    .text h4,
    .text p {
      max-width: 100%;
      overflow-wrap: break-word;
      word-break: break-word;
      hyphens: auto;
    }
  }
</style>

<script>
  function updateTimelineWithArc(arcRadius = 35) {
    const timeline = document.querySelector(".timeline");
    if (!timeline) return;

    const svg = timeline.querySelector(".arc-svg");
    if (!svg) return;

    const pathTop = svg.querySelector(".line-top");
    const pathBottom = svg.querySelector(".line-bottom");
    const arc = svg.querySelector(".arc-path");

    const p1 = timeline.querySelector('.step[data-step="1"] .point-left');
    const p2 = timeline.querySelector('.step[data-step="2"] .point-right');
    const p3 = timeline.querySelector('.step[data-step="3"] .point-left');
    const p4 = timeline.querySelector('.step[data-step="4"] .point-right');
    const tRect = timeline.getBoundingClientRect();

    const center = (el: Element) => {
      const r = el.getBoundingClientRect();
      return {
        x: r.left - tRect.left + r.width / 2,
        y: r.top - tRect.top + r.height / 2,
      };
    };

    if (!p1 || !p2 || !p3 || !p4) return;

    const c1 = center(p1);
    const c2 = center(p2);
    const c3 = center(p3);
    const c4 = center(p4);

    if (pathTop) {
      pathTop.setAttribute("d", `M ${c1.x} ${c1.y} L ${c2.x} ${c2.y}`);
    }

    if (pathBottom) {
      pathBottom.setAttribute("d", `M ${c3.x} ${c3.y} L ${c4.x} ${c4.y}`);
    }

    if (arc) {
      arc.setAttribute(
        "d",
        `M ${c2.x} ${c2.y} A ${arcRadius} ${arcRadius} 0 0 1 ${c4.x} ${c4.y}`,
      );
    }

    svg.setAttribute("viewBox", `0 0 ${tRect.width} ${tRect.height}`);
  }

  const arcRadius = 60;

  window.addEventListener("load", () => updateTimelineWithArc(arcRadius));
  window.addEventListener("resize", () => updateTimelineWithArc(arcRadius));
  if ("ResizeObserver" in window) {
    const timelineEl = document.querySelector(".timeline");
    if (timelineEl) {
      new ResizeObserver(() => updateTimelineWithArc(arcRadius)).observe(
        timelineEl,
      );
    }
  }
</script>
